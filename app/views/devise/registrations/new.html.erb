<main class="login-form" style="margin-top: 50px;">
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header"><h2>Sign up</h2></div>
                    <div class="card-body">
                        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                        <%= render "devise/shared/error_messages", resource: resource %>
                            <div class="form-group row">
                                <div class="col-md-4 col-form-label text-md-right">
                                  <%= f.label :email, class: "col-form-label text-md-right" %>
                                </div>
                                <div class="col-md-6">
                                   <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %> 
                                </div>
                            </div> 


                            <div class="form-group row">
                                <div class="col-md-4 col-form-label text-md-right">
                                  <%= f.label :username, class: "col-form-label text-md-right" %>
                                </div>
                                <div class="col-md-6">
                                   <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control", required: true %> 
                                </div>
                            </div>



                            <div class="form-group row">
                              <div class="col-md-4 col-form-label text-md-right">
                                <%= f.label :display_name, class: "col-form-label text-md-right" %>
                              </div>
                                <div class="col-md-6">
                                   <%= f.text_field :display_name, autofocus: true, autocomplete: "display_name", class: "form-control", required: true %> 
                                </div>
                            </div>


                               
                            <div class="form-group row">
                                <div class="col-md-4 col-form-label text-md-right">
                                  <%= f.label :password, class: "" %>
                                </div>
                                <div class="col-md-6">
                                  <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
                                  <% if @minimum_password_length %>
                                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                                <% end %>
                                </div>
                            </div>

                            <div class="form-group row">
                              <div class="col-md-4 col-form-label text-md-right">
                                <%= f.label :password_confirmation, class: "col-form-label text-md-right" %>
                              </div>  
                                <div class="col-md-6">
                                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true %>
                                </div>
                            </div>

                           

                            <div class="col-md-6 offset-md-4">
                                <%= f.submit "Sign up", class: "btn btn-primary" %>

                                Or <%= render "devise/shared/links" %>
                            </div>
                             

                     <% end %>        
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>

</main>


